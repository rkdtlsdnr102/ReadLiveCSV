<Window x:Class="PlotCSV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlotCSV"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250*"/>
            <ColumnDefinition Width="250*"/>
            <ColumnDefinition Width="250*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer x:Name="txtBlockScrollViewer" Height="288" Margin="0,1,0,130" Grid.Column="3">
            <TextBlock x:Name="txtBlockReadSerial" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Text="TextBlock" />
        </ScrollViewer>

        <!-- gyro section-->
        <lvc:CartesianChart Name="gyro_x" Margin="0,0,0,285" Grid.Column="0">
            <lvc:CartesianChart.Series>
                <lvc:LineSeries Values="{Binding m_GyroValuesX}" Title="Gyro Data"/>
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Time"/>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Gyro Value X" />
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
        <lvc:CartesianChart Name="gyro_y" Margin="0,139,0,130" Height="150" Grid.Column="0">
            <lvc:CartesianChart.Series>
                <lvc:LineSeries Values="{Binding m_GyroValuesY}" Title="Gyro Data"/>
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Time"/>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Gyro Value Y" />
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
        <lvc:CartesianChart Name="gyro_z" Margin="0,289,0,0" Grid.Column="0">
            <lvc:CartesianChart.Series>
                <lvc:LineSeries Values="{Binding m_GyroValuesZ}" Title="Gyro Data"/>
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Time"/>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Gyro Value Z" />
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>

        <!-- pid section-->
        <lvc:CartesianChart Name="pid_x" Margin="0,0,0,285" Grid.Column="1" Grid.ColumnSpan="1">
            <lvc:CartesianChart.Series>
                <lvc:LineSeries Values="{Binding m_PidValuesX}" Title="PID Data"/>
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Time"/>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="PID Value X" />
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
        <lvc:CartesianChart Name="pid_y" Margin="0,139,0,130" Height="150" Grid.Column="1" Grid.ColumnSpan="1">
            <lvc:CartesianChart.Series>
                <lvc:LineSeries Values="{Binding m_PidValuesY}" Title="PID Data"/>
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Time"/>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="PID Value Y" />
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
        <lvc:CartesianChart Name="pid_z" Margin="0,289,0,0" Grid.Column="1" Grid.ColumnSpan="1">
            <lvc:CartesianChart.Series>
                <lvc:LineSeries Values="{Binding m_PidValuesZ}" Title="PID Data"/>
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Time"/>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="PID Value Z" />
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
        <Button x:Name="btnPortOpen" Content="포트 읽기" Grid.Column="3" HorizontalAlignment="Left" Margin="10,314,0,0" VerticalAlignment="Top" Width="75" Click="btnPortOpen_Click" />
        <Button x:Name="btnPortClose" Content="포트 끄기" Grid.Column="3" HorizontalAlignment="Left" Margin="113,314,0,0" VerticalAlignment="Top" Width="75" Click="btnPortClose_Click" />
    </Grid>
</Window>
