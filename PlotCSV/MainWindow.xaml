<Window x:Class="PlotCSV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlotCSV"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- gyro section-->
        <lvc:CartesianChart Name="gyro_x" Margin="0,0,0,285" Grid.Column="0">
            <lvc:CartesianChart.Series>
                <lvc:LineSeries Values="{Binding m_GyroValuesX}" Title="Gyro Data"/>
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Time"/>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Gyro Value X" />
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
        <lvc:CartesianChart Name="gyro_y" Margin="0,139,0,130" Grid.Column="0">
            <lvc:CartesianChart.Series>
                <lvc:LineSeries Values="{Binding m_GyroValuesY}" Title="Gyro Data"/>
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Time"/>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Gyro Value Y" />
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
        <lvc:CartesianChart Name="gyro_z" Margin="0,289,0,0" Grid.Column="0">
            <lvc:CartesianChart.Series>
                <lvc:LineSeries Values="{Binding m_GyroValuesZ}" Title="Gyro Data"/>
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Time"/>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Gyro Value Z" />
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>

        <!-- pid section-->
        <lvc:CartesianChart Name="pid_x" Margin="0,0,0,285" Grid.Column="1" Grid.ColumnSpan="1">
            <lvc:CartesianChart.Series>
                <lvc:LineSeries Values="{Binding m_PidValuesX}" Title="PID Data"/>
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Time"/>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="PID Value X" />
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
        <lvc:CartesianChart Name="pid_y" Margin="0,139,0,130" Grid.Column="1" Grid.ColumnSpan="1">
            <lvc:CartesianChart.Series>
                <lvc:LineSeries Values="{Binding m_PidValuesY}" Title="PID Data"/>
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Time"/>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="PID Value Y" />
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
        <lvc:CartesianChart Name="pid_z" Margin="0,289,0,0" Grid.Column="1" Grid.ColumnSpan="1">
            <lvc:CartesianChart.Series>
                <lvc:LineSeries Values="{Binding m_PidValuesZ}" Title="PID Data"/>
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Time"/>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="PID Value Z" />
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
        <Button x:Name="btnPortOpen" Content="포트 읽기" Grid.Column="2" HorizontalAlignment="Left" Margin="46,353,0,0" VerticalAlignment="Top" Width="75" Click="btnPortOpen_Click" />
        <Button x:Name="btnPortClose" Content="포트 끄기" Grid.Column="2" HorizontalAlignment="Left" Margin="217,353,0,0" VerticalAlignment="Top" Width="75" Click="btnPortClose_Click" />
        <TextBox x:Name="txtbox" Grid.Column="2" HorizontalAlignment="Left" Height="304" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="330" RenderTransformOrigin="0.733,0.652" VerticalScrollBarVisibility="Visible" IsReadOnly="True"/>
        <TextBox x:Name="txtBoxSerialWrite" Grid.Column="2" HorizontalAlignment="Left" Height="26" Margin="46,313,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="204" TextChanged="txtBoxSerialWrite_TextChanged"/>
        <Button x:Name="btnSendSerialData" Content="전송" Grid.Column="2" HorizontalAlignment="Left" Margin="255,313,0,0" VerticalAlignment="Top" Width="75" Height="26" Click="btnSendSerialData_Click"/>
        <Label Content="입력" Grid.Column="2" HorizontalAlignment="Left" Margin="5,313,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
